<UserControl
    x:Class="RestaurantManager.UCtrlNavigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <x:String x:Key="btnHome">Home</x:String>
        <x:String x:Key="btnExpedite">Expedite page</x:String>
        <x:String x:Key="btnOrder">Order page</x:String>
        <Style TargetType="AppBarButton">
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" >
        <AppBarButton x:Name="btnHome" Click="btnHome_OnClick" Icon="Home" Label="{StaticResource btnHome}"/>
        <AppBarButton x:Name="btnExpeditePage" Click="btnExpeditePage_OnClick"  Label="{StaticResource btnExpedite}"></AppBarButton>
        <AppBarButton x:Name="btnOrderPage" Click="btnOrderPage_OnClick"  Label="{StaticResource btnOrder}"></AppBarButton>
    </StackPanel>

</UserControl>
